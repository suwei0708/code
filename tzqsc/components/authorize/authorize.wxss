.authorize-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .6);
    z-index: 993;
}
.authorize {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 999;
    width: 550rpx;
    padding: 20rpx 0 26rpx;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background: #fff;
    -webkit-border-radius: 10rpx;
    border-radius: 10rpx;
    text-align: center;
}
.authorize .img {
    display: block;
    width: 366rpx;
    height: 152rpx;
    margin: 0 auto;
}
.authorize .text1 {
    line-height: 60rpx;
    padding: 10rpx 0 0;
    font-size: 36rpx;
    color: #0d0d0d;
    font-weight: 700;
}
.cowndown {
    padding: 15rpx 0 0;
    line-height: 50rpx;
    font-size: 32rpx;
    color: #0d0d0d;
}
.cowndown .t {
    display: inline-block;
    vertical-align: middle;
    margin: -3rpx 10rpx 0;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #fff;
    background: #ff4f65;
    font-size: 32rpx;
    -webkit-border-radius: 10rpx;
    border-radius: 10rpx;
}
.authorize .coupon {
    position: relative;
    width: 494rpx;
    height: 195rpx;
    margin: 38rpx auto 0;
}
.authorize .coupon .imgs {
    width: 494rpx;
    height: 195rpx;
}
.authorize .coupon .t1 {
    position: absolute;
    top: 57rpx;
    left: 23rpx;
    font-size: 40rpx;
    font-weight: 700;
    color: #fff;
    line-height: 1;
}
.authorize .coupon .t2 {
    position: absolute;
    top: 115rpx;
    left: 23rpx;
    font-size: 28rpx;
    color: #fff;
    line-height: 1;
}
.btn {
    margin-top: 40rpx;
    width: 492rpx;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0;
    font-size: 40rpx;
    -webkit-border-radius: 10rpx;
    border-radius: 10rpx;
}
.btn-authorize {
    background: #fdd33c;
    color: #000;
    font-weight: 700;
}
.btn-no {
    margin: 0;
    background: none;
    font-size: 28rpx;
    color: #999;
}
.btn:after {
    border: none;
}
.btn-text {
    text-decoration: underline;
}